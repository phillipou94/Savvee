<% provide(:title, 'Log In') %>

<div class="container">


<div class="signup-box">
   <div class="form-title">Sign In</div>
      <%= form_for(:session,url:login_path) do |f| %> <!-- built-in form creation function -->

      <%= f.text_field :email, class: 'form-control', :placeholder => "email" %>

      <%= f.password_field :password_digest, class: 'form-control', :placeholder => "password" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
         <%= f.check_box :remember_me, class: "checkbox"%>
         <p>Remember me on this computer</p>
      <% end %>

      <%= f.submit "Sign In", class: "form-button grow" %>
      <% end %>
</div>

<p> Forgot your password? </p>
</div>